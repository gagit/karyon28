    <services>
        <service id="nroInforme.set" class="BDS\DoctrineBundle\Eventos\NroInforme">
            <tag name="doctrine.event_listener" event="prePersist" />
        </service>
        <service id="alta.allanamiento" class="BDS\DoctrineBundle\Eventos\Allanamientos">
            <tag name="doctrine.event_listener" event="postPersist" />
            <argument type="service" id="service_container" />
        </service>
        <service id="alta.hallazgos" class="BDS\DoctrineBundle\Eventos\Hallazgos">
            <tag name="doctrine.event_listener" event="postPersist" />
            <argument type="service" id="service_container" />
        </service>
        <service id="actualizar.hallazgos" class="BDS\DoctrineBundle\Eventos\Hallazgos">
            <tag name="doctrine.event_listener" event="postUpdate" />
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>
